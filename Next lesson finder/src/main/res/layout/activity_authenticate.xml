<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_authenticate"
    android:background="@color/app_bg">>

    <androidx.wear.widget.BoxInsetLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/box_inset_layout_padding"
        tools:context=".activity_main"
        tools:deviceIds="wear">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <TextView
                        android:id="@+id/nextLessonText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:includeFontPadding="false"
                        android:text="Authenticate"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/title_color" />

                    <TextView
                        android:id="@+id/authenticateStatusText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="status" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/itembg_top">

                        <EditText
                            android:id="@+id/inputNumberLlnNummer"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"

                            android:backgroundTint="@color/text_color"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="lln nummer"
                            android:inputType="number"
                            android:maxLength="6" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/itembg_bottom">

                        <EditText
                            android:id="@+id/inputTextZermeloCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:ems="10"
                            android:gravity="center"
                            android:hint="zermelo code"
                            android:inputType="number" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <Button
                        android:id="@+id/loginButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Login"
                        android:background="@drawable/itembg_top"
                        android:textColor="@color/text_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp" />

                    <Button
                        android:id="@+id/logoutButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:background="@drawable/itembg_bottom"
                        android:textColor="@color/text_color" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <TextView
                        android:id="@+id/versionTitleAuthenticate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="version"
                        android:textColor="#34FFFFFF" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                </LinearLayout>
            </FrameLayout>
        </ScrollView>

    </androidx.wear.widget.BoxInsetLayout>
</androidx.constraintlayout.widget.ConstraintLayout>